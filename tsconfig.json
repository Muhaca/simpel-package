{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "jsx": "react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}